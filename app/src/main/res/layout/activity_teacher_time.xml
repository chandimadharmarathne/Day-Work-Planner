<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/backgr"
    tools:context=".TeacherTime">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="2dp"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:hint="User Name "
            android:id="@+id/userFullName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="2dp"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:id="@+id/phonenumberteacher"
            android:hint="User ID : "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="2dp"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:hint="Username"
            android:id="@+id/testuseridea"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dateTeacher"
        android:paddingTop="15dp"
        android:hint="Select Date"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:drawableTop="@drawable/ic_date"
        android:drawablePadding="16dp"
        android:background="@android:drawable/editbox_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_timeTeacher"
        android:hint="Select Time"
        android:paddingTop="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:drawableTop="@drawable/ic_time"
        android:drawablePadding="16dp"
        android:background="@android:drawable/editbox_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addUserIDTeacher"
        android:hint="Add User Id"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_phone"
        android:drawablePadding="16dp"
        android:background="@android:drawable/editbox_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addEventTeacher"
        android:hint="Add Event"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_event"
        android:drawablePadding="16dp"
        android:background="@android:drawable/editbox_background"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addDesTexcher"
        android:hint="Add Description"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:gravity="center"
        android:drawableTop="@drawable/des"
        android:drawablePadding="16dp"
        android:background="@android:drawable/editbox_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main"
            android:textSize="15dp"
            android:layout_gravity="left"
            android:layout_marginRight="90dp"
            android:background="@color/teal_200"
            android:id="@+id/btnTeacherView"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textSize="15dp"
            android:layout_gravity="right"
            android:layout_marginLeft="90dp"
            android:background="@color/teal_200"
            android:id="@+id/btnTeacherSend"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="day"
            android:textSize="2dp"
            android:textColor="#FFFFFF"
            android:id="@+id/dateteacher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="month"
            android:textSize="2dp"
            android:textColor="#FFFFFF"
            android:id="@+id/monthteacher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="year"
            android:textSize="2dp"
            android:textColor="#FFFFFF"
            android:id="@+id/yearteacher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="des"
            android:textSize="2dp"
            android:textColor="#FFFFFF"
            android:id="@+id/desexampleteacher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="des"
            android:textSize="2dp"
            android:textColor="#FFFFFF"
            android:id="@+id/nameset"/>

    </LinearLayout>



</LinearLayout>